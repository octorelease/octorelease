{
  "name": "@octorelease/changelog",
  "version": "0.1.0",
  "description": "Octorelease plugin to read and update changelogs.",
  "main": "lib/index.js",
  "files": [
    "lib",
    "CHANGELOG.md"
  ],
  "scripts": {
    "build": "tsc -b && npm run lint",
    "lint": "eslint src",
    "pack": "esbuild src/index.ts --bundle --outfile=../../dist/changelog.js --platform=node",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postversion": "cd ../.. && npm install --package-lock-only --ignore-scripts --no-audit",
    "watch": "tsc -w"
  },
  "keywords": [
    "changelog",
    "octorelease",
    "plugin",
    "version"
  ],
  "author": "t1m0thyj",
  "license": "Apache-2.0",
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@actions/glob": "^0.4.0"
  },
  "peerDependencies": {
    "@octorelease/core": "^0.1.0"
  }
}
