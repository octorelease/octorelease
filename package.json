{
  "name": "octorelease",
  "private": true,
  "description": "Extensible GitHub action to publish semantic releases.",
  "main": "index.js",
  "bin": "dist/index.js",
  "scripts": {
    "build": "tsc -b --force",
    "lint": "eslint packages/**/*.ts",
    "pack": "npm run pack --workspaces",
    "test": "jest",
    "typedoc": "typedoc --plugin typedoc-plugin-markdown --out docs/typedoc packages/core/src/index.ts",
    "watch": "tsc -w",
    "all": "npm run build && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/octorelease/octorelease.git"
  },
  "keywords": [],
  "author": "t1m0thyj",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@types/node": "^16.6.0",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "esbuild": "^0.14.23",
    "eslint": "^7.3.1",
    "eslint-plugin-jest": "^24.4.0",
    "eslint-plugin-license-header": "^0.4.0",
    "glob": "^7.2.0",
    "jest": "^27.0.0",
    "jest-circus": "^27.0.0",
    "ts-jest": "^27.0.0",
    "typedoc": "^0.22.12",
    "typedoc-plugin-markdown": "^3.11.14",
    "typescript": "^4.3.0"
  }
}
