{
  "name": "octorelease",
  "private": true,
  "description": "Extensible GitHub action to publish semantic releases",
  "main": "index.js",
  "scripts": {
    "build": "lerna run build",
    "lint": "eslint packages/**/*.ts",
    "pack": "ncc build packages/core/lib/main.js && node scripts/packPlugins.js",
    "test": "jest",
    "clean": "lerna run --parallel clean",
    "watch": "lerna run --parallel watch",
    "all": "npm run build && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t1m0thyj/octorelease.git"
  },
  "keywords": [],
  "author": "t1m0thyj",
  "license": "MIT",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@types/jest": "^27.0.0",
    "@types/node": "^16.6.0",
    "@typescript-eslint/eslint-plugin": "^4.29.0",
    "@typescript-eslint/parser": "^4.29.0",
    "@vercel/ncc": "^0.29.2",
    "eslint": "^7.3.1",
    "eslint-plugin-jest": "^24.4.0",
    "glob": "^7.2.0",
    "jest": "^27.0.0",
    "jest-circus": "^27.0.0",
    "lerna": "^4.0.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.0.0",
    "typescript": "^4.3.0"
  }
}
