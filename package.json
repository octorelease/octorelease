{
  "name": "node-versioner",
  "version": "0.0.0",
  "private": true,
  "description": "GitHub Action to version a Node.js project and publish it to GitHub/NPM registry/VS Code Marketplace",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src/**/*.ts",
    "pack": "ncc build",
    "test": "jest",
    "clean": "rimraf lib",
    "watch": "ncc build src/main.ts -w",
    "all": "npm run build && npm run lint && npm run pack && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/t1m0thyj/node-versioner.git"
  },
  "keywords": [
    "actions",
    "changelog",
    "github",
    "node",
    "npm",
    "publish",
    "semver",
    "version",
    "vsce"
  ],
  "author": "t1m0thyj",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.0",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^4.0.0",
    "@actions/glob": "^0.1.0",
    "cosmiconfig": "^7.0.0",
    "mime-types": "^2.1.27",
    "semver": "^6.3.0"
  },
  "devDependencies": {
    "@types/jest": "^24.0.23",
    "@types/node": "^12.7.12",
    "@types/semver": "^7.3.6",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "@zeit/ncc": "^0.20.5",
    "eslint": "^7.3.1",
    "eslint-plugin-jest": "^22.21.0",
    "jest": "^26.1.0",
    "jest-circus": "^26.1.0",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.1.1",
    "typescript": "^3.6.4"
  }
}
